<div class="row">
  <div class="medium-4 columns">
    <%= render "menu" %>
  </div>
  <div class="medium-8 columns">
    <h3>Account</h3>
    <% action = params[:action] %>
    
    <%= form_for(@user,:method=>:patch,:url=>settings_update_info_path) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
    <%= hidden_field_tag 'my_action' ,'/settings/account' %>
      <div class="row">
        <div class="small-8">


          <div class="row">
            <div class="small-3 columns">
              <label for="right-label" class="right inline">Username</label>
            </div>
            <div class="small-9 columns">
                <%= f.text_field :username , :value => @user.username %>
            </div>
          </div>

          <div class="row">
            <div class="small-3 columns">
              <label for="right-label" class="right inline">Email</label>
            </div>
            <div class="small-9 columns">
               <%= f.text_field :email , :value => @user.email%>
            </div>
          </div>

          <div class="row">
            <div class="small-3 columns">
              <label for="right-label" class="right inline">Timezone</label>
            </div>
            <div class="small-9 columns">
             <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones%>
            </div>
          </div>

          <div class="actions">
            <%= f.submit %>
          </div>

        </div>
      </div>
    <%end%>
  

  </div>
</div>
